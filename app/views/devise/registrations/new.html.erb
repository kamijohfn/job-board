<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ユーザー新規登録</h2>

        <%# 「モデル名」にはUserモデルであれば@userを渡しましょう。%>
        <%# 「新規登録機能へのパス」は、devise導入後にrails routesを実行してdevise/registrations#createへのパスを確認し、記載してください。 %>
        <%= form_with model: @user, url:  user_registration_path, local: true do |f| %>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, id:"user_email", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード（6文字以上）" %><br />
          <%= f.password_field :password, id:"user_password", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード再入力" %><br />
          <%= f.password_field :password_confirmation, id:"user_password_confirmation", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :nickname, "ニックネーム" %><br />
          <%= f.text_field :nickname, id:"user_name" %>
        </div>

        <div class="field">
          <%= f.label :last_name, "名字(全角)" %><br />
          <%= f.text_field :last_name, id:"user_name", placeholder:"例:山田" %>
          <%#= f.text_area :last_name, class: :form__text, id:"user_last_name" %>
        </div>

        <div class="field">
          <%= f.label :first_name, "名前(全角)" %><br />
          <%= f.text_area :first_name, class: :form__text, id:"user_first_name" %>
        </div>

        <div class="field">
          <%= f.label :last_name_kana, "名字(全角カナ)" %><br />
          <%= f.text_area :last_name_kana, class: :form__text, id:"user_last_name_kana" %>
        </div>

        <div class="field">
          <%= f.label :first_name_kana, "名前(全角カナ)" %><br />
          <%= f.text_area :first_name_kana, class: :form__text, id:"user_first_name_kana" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>